<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        style="@style/global_rounded"
        android:padding="15dp"
        android:layout_marginBottom="15dp"

        >
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="Cargando..."/>

        <ImageView
            android:id="@+id/vehicleImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/telepeaje" />

        <TextView
            android:id="@+id/modeloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Cargando..."/>
        <TextView
            android:id="@+id/placasText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Cargando..."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/tagText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/merriweather_regular"
            android:text="Tag: cargando..."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
        <TextView
            android:id="@+id/saldoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/merriweather_regular"
            android:text="Saldo: cargando..."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRecarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recargar"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:layout_margin="2dp"
            style="@style/buttons2"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMisCruces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver mis cruces"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:layout_margin="2dp"
            style="@style/buttons2"
            />
    </LinearLayout>


</LinearLayout>