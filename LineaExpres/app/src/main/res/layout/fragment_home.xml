<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/ColorGlobal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/boxMargin"
        android:paddingBottom="@dimen/PaddingBottomNav"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ReporteDePuentesContainer"
            style="@style/global_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/boxMargin"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            app:layout_constraintBottom_toTopOf="@+id/sliderviewPagerContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goToCameras"
                android:layout_width="200dp"
                android:layout_height="65dp"
                style="@style/login_btns"
                android:textSize="@dimen/globalFontSize"
                android:background="@drawable/camera_btn"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/sliderviewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:focusable="true"
            android:clickable="true"
            style="@style/global_rounded"
            android:padding="@dimen/boxPadding"
            android:layout_margin="@dimen/boxMargin"
            app:layout_constraintBottom_toTopOf="@+id/ad_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/sliderViewPagerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/boxCornerRadius"
                app:cardElevation="0dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                >
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/sliderViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="SpeakableTextPresentCheck">

                </androidx.viewpager.widget.ViewPager>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/weather_container"
            style="@style/global_rounded"
            android:padding="@dimen/boxPadding"
            android:layout_margin="@dimen/boxMargin"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/adCarouselContainer"
                android:layout_width="336dp"
                android:layout_height="280dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="@dimen/boxCornerRadius"
                app:cardElevation="0dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                >
                <ImageView
                    android:background="@drawable/image_loader"
                    android:id="@+id/adCarousel"
                    android:layout_width="336dp"
                    android:layout_height="280dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weather_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/youtubeEmbedContainer"
        style="@style/weather_rounded_exterior"
        android:layout_margin="@dimen/boxMargin"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weather_Juarez"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/container_round_weather"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/image_weather"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/climaicon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/actual_weather"
                />
            <TextView
                android:id="@+id/actual_weather"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="0"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/max_weather"
                app:layout_constraintBottom_toTopOf="@id/feelslike_weather"
                />
            <TextView
                android:id="@+id/max_weather"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="0"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/actual_weather"
                app:layout_constraintBottom_toTopOf="@id/hr"
                />
            <View
                android:id="@+id/hr"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/min_weather"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/min_weather"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="0"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"

                android:textSize="30sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/feelslike_weather"
                app:layout_constraintBottom_toTopOf="@+id/humidity_weather"
                />
            <TextView
                android:id="@+id/feelslike_weather"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="SENSACIÓN: "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="10sp"
                android:fontFamily="@font/montserrat_bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/min_weather"
                app:layout_constraintBottom_toTopOf="@+id/windspeed_weather"
                />
            <ImageView
                android:id="@+id/windspeed_weather"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/viento"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/windspeednumber_weather"
                app:layout_constraintRight_toLeftOf="@+id/humidity_weather"
                />
            <ImageView
                android:id="@+id/humidity_weather"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/humedad"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/windspeed_weather"
                app:layout_constraintBottom_toTopOf="@+id/humiditynumber_weather"
                />
            <TextView
                android:id="@+id/windspeednumber_weather"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0 E"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/humiditynumber_weather"
                app:layout_constraintBottom_toTopOf="@+id/time_weather"
                />
            <TextView
                android:id="@+id/humiditynumber_weather"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/windspeednumber_weather"
                app:layout_constraintBottom_toTopOf="@+id/time_weather"
                />
            <TextView
                android:id="@+id/time_weather"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="A PARTIR DE LAS 15:03"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="10sp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/youtubeEmbedContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="@dimen/boxPadding"
            android:layout_margin="@dimen/boxMargin"
            style="@style/global_rounded"
            app:layout_constraintBottom_toTopOf="@+id/fourNotes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/boxCornerRadius"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/YoutubeEmbededContainerRounded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="@dimen/boxCornerRadius"
                app:cardElevation="0dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                >
            <WebView
                android:id="@+id/youtubeEmbed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fourNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/boxPadding"
            android:layout_margin="@dimen/boxMargin"
            style="@style/global_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Más información:"
                style="@style/global_rounded_plecas"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/globalFontSize"
                app:layout_constraintBottom_toTopOf="@+id/Nota1_body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Nota1_body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toTopOf="@+id/Nota2_body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/Nota1_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/newsFontSize"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Nota1_imageContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/Nota1_imageContainer"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Nota1_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:outlineSpotShadowColor="@android:color/transparent"
                    >
                    <ImageView
                        android:id="@+id/Nota1_image"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_loader" />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Nota2_body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toTopOf="@+id/Nota3_body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/Nota2_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="@dimen/newsFontSize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Notaw_imageContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/Notaw_imageContainer"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Nota2_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:outlineSpotShadowColor="@android:color/transparent"
                    >
                    <ImageView
                        android:id="@+id/Nota2_image"
                        android:scaleType="centerCrop"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/image_loader" />
                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Nota3_body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toTopOf="@+id/Nota4_body"
                android:layout_margin="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/Nota3_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/newsFontSize"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Nota3_imageContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/Nota3_imageContainer"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Nota3_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:outlineSpotShadowColor="@android:color/transparent"
                    >
                    <ImageView
                        android:id="@+id/Nota3_image"
                        android:scaleType="centerCrop"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/image_loader"
                      />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Nota4_body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/Nota4_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/newsFontSize"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Nota4_imageContainer"
                    app:layout_constraintHorizontal_bias="0.66"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/Nota4_imageContainer"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Nota4_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:outlineSpotShadowColor="@android:color/transparent"
                    >
                    <ImageView
                        android:id="@+id/Nota4_image"
                        android:scaleType="centerCrop"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/image_loader"
                         />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
