<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorGlobal"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/global_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:padding="10dp">

        <ScrollView
            android:id="@+id/tagChecker"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Acceso Digital Peatonal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSubs"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/adp"
                    android:layout_marginBottom="8dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Captura acceso digital"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSize"
                    android:textStyle="bold"
                    android:padding="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/tagValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputText"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:hint="Escribe tu nÃºmero de tarjeta"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/validarTag"
                    style="@style/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_margin="5dp"
                    android:text="Validar TAG"
                    android:textSize="@dimen/globalFontSize" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/tagUploader"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Acceso Digital Peatonal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSubs"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Datos del usuario"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSize"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merriweather_regular"
                    android:text="Nombre(s)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSize"
                    android:textStyle="bold"
                    android:padding="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/NombresInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputText"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merriweather_regular"
                    android:text="Apellido(s)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSize"
                    android:textStyle="bold"
                    android:padding="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/ApellidosInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputText"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merriweather_regular"
                    android:text="Acceso Peatonal"
                    android:enabled="false"
                    android:textIsSelectable="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/globalFontSize"
                    android:textStyle="bold"
                    android:padding="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/TagVehicleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputText"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:editable="false"
                    android:clickable="false"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <!-- <EditText
                    android:id="@+id/BridgeVehicleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zaragoza/Lerdo"
                    style="@style/inputText"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" /> -->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uploadTeleVehicle"
                    style="@style/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_margin="5dp"
                    android:text="Agregar TAG"
                    android:textSize="@dimen/globalFontSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>