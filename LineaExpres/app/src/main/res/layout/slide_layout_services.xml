<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ColorGlobal"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/serv_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/image_loader" />

    <TextView
        android:id="@+id/serv_category"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="@string/Servicios"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/serv_image"
        app:layout_constraintEnd_toEndOf="@+id/serv_image"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/serv_image"
        app:layout_constraintTop_toTopOf="@+id/serv_image"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/serv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Loading"
        android:textSize="@dimen/globalFontSize"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/serv_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/serv_image"
        app:layout_constraintTop_toBottomOf="@+id/serv_image"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>