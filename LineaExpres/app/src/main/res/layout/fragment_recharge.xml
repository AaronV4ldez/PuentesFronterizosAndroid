<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorGlobal"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/global_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:padding="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <LinearLayout
                    android:id="@+id/LineaExpresLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/OriginVehTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Seleccione el origen de su tarjeta"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/globalFontSubs"
                        android:textStyle="bold"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMX"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            style="@style/buttons2"
                            android:textSize="@dimen/globalFontSize"
                            android:layout_marginRight="-10dp"
                            android:text="MÃ©xico" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnUSA"
                            style="@style/buttons2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="USA"
                            android:textSize="@dimen/globalFontSize" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/AdscrPuenteTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Cantidad a cargar en pesos mexicanos"
                        android:textColor="@color/black"
                        android:textSize="@dimen/globalFontSize"
                        android:textStyle="bold"
                        android:padding="3dp" />

                    <LinearLayout
                        android:id="@+id/saldoSegment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSaldo1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            style="@style/buttons2"
                            android:textSize="@dimen/globalFontSize"
                            android:layout_marginRight="-10dp"
                            android:text="---" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSaldo2"
                            style="@style/buttons2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="---"
                            android:textSize="@dimen/globalFontSize" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/LineamientosLblTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TAG Seleccionado"
                        android:layout_marginBottom="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/tagSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/inputText"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:textIsSelectable="false"
                        android:enabled="false"
                        android:inputType="text"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRecargar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        style="@style/buttons2"
                        android:textSize="@dimen/globalFontSize"
                        android:text="Continuar" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/TelepeajeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Cantidad a cargar en pesos mexicanos"
                        android:textColor="@color/black"
                        android:textSize="@dimen/globalFontSubs"
                        android:textStyle="bold"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <EditText
                        android:id="@+id/TelepeajeRecarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/inputText"
                        android:ems="10"
                        android:inputType="number"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TAG Seleccionado"
                        android:layout_marginBottom="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/TelepeajetagSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/inputText"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:textIsSelectable="false"
                        android:enabled="false"
                        android:inputType="text"
                        />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRecargarTelepeaje"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        style="@style/buttons2"
                        android:textSize="@dimen/globalFontSize"
                        android:text="Continuar" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>