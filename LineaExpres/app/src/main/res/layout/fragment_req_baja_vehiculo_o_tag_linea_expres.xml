<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorGlobal"
    android:padding="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="110dp"
        android:paddingTop="20dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/boxMargin"
        android:padding="@dimen/boxPaddingTramites"
        style="@style/global_rounded"
        >

    <TextView
        android:id="@+id/req_balance_transfer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/UnsubscribeTiel"
        android:textColor="@color/white"
        android:textAlignment="center"
        style="@style/pelcahomemasinformacion"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/noSentriLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noSentriLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehicleSentriLbl"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/noSentriInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/noSentriInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/uploadSentriPhotoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadSentriPhotoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/globalFontSize"
            android:text="@string/BtnUploadSentri"
            app:layout_constraintBottom_toTopOf="@+id/SentriPhotoImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/SentriPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/expirationDateSentriLbl"
            />

        <TextView
            android:id="@+id/expirationDateSentriLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/SentriExpirationDateLbl"
            android:textColor="@color/black"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/expirationDateSentriInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <EditText
            android:id="@+id/expirationDateSentriInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/inputText"
            android:layout_marginBottom="8dp"
            android:focusableInTouchMode="false"
            android:ems="10"
            android:inputType="date|number"
            app:layout_constraintBottom_toTopOf="@+id/nameLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/nameLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Nombre"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/nameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputTextDisabled"
        android:ems="10"
        android:hint="Autorellenable"
        android:enabled="false"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/middleNameLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/middleNameLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/ApellidoP"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/middleNameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/middleNameInput"
        style="@style/inputTextDisabled"
        android:ems="10"
        android:hint="Autorellenable"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/lastNameLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lastNameLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/ApellidoM"
            android:textColor="@color/black"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/lastNameInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/lastNameInput"
            style="@style/inputTextDisabled"
            android:ems="10"
            android:hint="Autorellenable"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/uploadOfficialIDPhotoBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadOfficialIDPhotoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/globalFontSize"
            android:text="@string/BtnUploadOfficialID"
            app:layout_constraintBottom_toTopOf="@+id/IdOficialPhotoImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/IdOficialPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/uploadOfficialReverseIDPhotoBtn"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadOfficialReverseIDPhotoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/globalFontSize"
            android:text="@string/BtnUploadOfficialIDReverse"
            app:layout_constraintBottom_toTopOf="@+id/IdOficialReversePhotoImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/IdOficialReversePhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/PersonalEmailLbl"
            />

    <TextView
        android:id="@+id/PersonalEmailLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/EmailLbl"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/PersonalEmailInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PersonalEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputTextDisabled"
        android:ems="10"
        android:hint="Autorellenable"
        android:enabled="false"
        android:layout_marginBottom="8dp"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/PersonalCelLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PersonalCelLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/CelNumberLbl"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/PersonalCelInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PersonalCelInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputTextDisabled"
        android:ems="10"
        android:hint="Autorellenable"
        android:enabled="false"
        android:layout_marginBottom="8dp"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/OldTagTitleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/OldTagTitleLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/VehicleNumberTagTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/OldTagTitleInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/OldTagTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/inputText"
            android:ems="10"
            android:hint="Número del engomado en el vehiculo"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/oldVehicleTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/oldVehicleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Datos del vehículo"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/BrandOldVehicleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/BrandOldVehicleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehicleBrandOld"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/BrandOldVehicleInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/BrandOldVehicleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/ColorOldVehicleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ColorOldVehicleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehicleColorOld"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ColorOldVehicleInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ColorOldVehicleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/PlatesOldVehicleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PlatesOldVehicleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehiclePlatesOld"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/PlatesOldVehicleInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PlatesOldVehicleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/ModelOldVehicleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ModelOldVehicleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehicleModelOld"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ModelOldVehicleInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ModelOldVehicleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/YearOldVehicleLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/YearOldVehicleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/VehicleYearOld"
        android:textColor="@color/black"
        android:textSize="@dimen/globalFontSize"
        android:textStyle="bold"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/YearOldVehicleInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/YearOldVehicleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/inputText"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/OldPlatesStateRG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/OldPlatesStateRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/OldOtherPlates"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/OldChihRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="@string/Chih"/>

            <RadioButton
                android:id="@+id/OldTxRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Tx" />

            <RadioButton
                android:id="@+id/OldOtherRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Other" />

        </RadioGroup>

        <EditText
            android:id="@+id/OldOtherPlates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/inputText"
            android:ems="10"
            android:hint="Otro"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/AdScrLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/AdScrLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Puente de Adscriptción"
            android:textColor="@color/black"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/BridgesRG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/BridgesRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/AdscrInput"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/ZaragozaRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="@string/ZaragozaRadioBtn"/>

            <RadioButton
                android:id="@+id/LerdoRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/LerdoRadioBtn" />

        </RadioGroup>

        <EditText
            android:id="@+id/AdscrInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/UnsubscribeMotiveLbl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/UnsubscribeMotiveLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Motivo Para La Solicitud De Baja"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/UnsubscribeMotiveInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/UnsubscribeMotiveInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="@style/inputText"
            android:ems="10"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/LineamientosText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/LineamientosText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:text="@string/LineamientosCortos"
            app:layout_constraintBottom_toTopOf="@+id/ProtestoLoNecesariolbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/ProtestoLoNecesariolbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protesto lo necesario."
            app:layout_constraintBottom_toTopOf="@+id/signature_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signature_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/SignContainer"
            android:text="Firme en la pantalla"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/SignContainer"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sendFormBtn"
            android:layout_height="500dp">

            <RelativeLayout
                android:id="@+id/signature_pad_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_above="@+id/buttons_container"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/signature_pad_description"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/signature_pad_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:text="Acepto Los Lineamientos"
                    android:textColor="@android:color/darker_gray" />

