<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorGlobal"
    android:layout_gravity="center"
    android:paddingBottom="100dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        style="@style/global_rounded"
        android:layout_margin="@dimen/boxMargin"
        android:padding="@dimen/boxPadding"

        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginMainConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Login_TitleLbl"
            style="@style/login_title"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Login_Title"
            app:layout_constraintBottom_toTopOf="@+id/Login_EmailInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Login_EmailInput"
            style="@style/login_input"
            android:layout_width="match_parent"
            android:hint="@string/Login_Email"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/globalFontSize"
            app:layout_constraintBottom_toTopOf="@+id/userEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/userEmpty"
            android:textColor="@color/RedLineaExpress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:textSize="@dimen/globalFontSize"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/Login_PasswordInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/Login_PasswordInput"
            style="@style/login_input"
            android:layout_width="match_parent"
            android:hint="@string/Login_Password"
            android:inputType="textPassword"
            android:textSize="@dimen/globalFontSize"
            app:layout_constraintBottom_toTopOf="@+id/passwordEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/passwordEmpty"
            android:textColor="@color/RedLineaExpress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/globalFontSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sentriEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- <EditText
            android:id="@+id/Login_SentriInput"
            style="@style/login_input"
            android:layout_width="match_parent"
            android:hint="@string/Login_Sentri"
            android:textSize="@dimen/globalFontSize"
            android:inputType="text"
            android:text="SentriAqui"
            app:layout_constraintBottom_toTopOf="@+id/sentriEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        !-->

        <TextView
            android:id="@+id/sentriEmpty"
            android:textColor="@color/RedLineaExpress"
            android:textSize="@dimen/globalFontSize"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/Login_LoginBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Login_LoginBtn"
            style="@style/login_btns"
            android:layout_width="240dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/backgroundnewtheme"
            android:text="@string/Login_LoginBtn"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/RegisterBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/RegisterBtn"
            style="@style/login_btns"
            android:layout_width="240dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/backgroundnewtheme"
            android:text="Registrarse"
            android:textSize="@dimen/globalFontSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Login_ForgotPasswordBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Login_ForgotPasswordBtn"
            style="@style/login_btns_without_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login_ForgotPasswordBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Login_TermsAndConditionsBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Login_TermsAndConditionsBtn"
            style="@style/login_btns_without_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login_TermsAndConditionsBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Login_ForgotPasswordBtn" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>